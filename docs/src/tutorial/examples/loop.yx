use std.io

loop_demo: () -> Void = {
    print("\n=== 循环示例 ===\n")

    // for 循环
    print("for 循环输出 1-5:\n")
    for i in 1..5 {
        print("数字: ")
        print(i)
        print("\n")
    }

    // while 循环
    print("while 循环倒计时:\n")
    mut count = 3
    while count > 0 {
        print(count)
        print("\n")
        count = count - 1
    }
    print("时间到！\n")
}

main: () -> Void = {
    loop_demo()
}