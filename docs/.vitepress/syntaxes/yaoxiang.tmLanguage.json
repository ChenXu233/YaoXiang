{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "YaoXiang",
  "scopeName": "source.yaoxiang",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#function-definition" },
    { "include": "#method-binding" },
    { "include": "#type-definition" },
    { "include": "#use-statement" },
    { "include": "#constants" },
    { "include": "#keywords" },
    { "include": "#types" },
    { "include": "#function-call" },
    { "include": "#arrows" },
    { "include": "#operators" },
    { "include": "#punctuation" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.block.yaoxiang",
          "begin": "/\\*",
          "end": "\\*/",
          "patterns": [
            { "include": "#comments" }
          ]
        },
        {
          "name": "comment.line.double-slash.yaoxiang",
          "match": "//.*$"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.yaoxiang",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.yaoxiang",
              "match": "\\\\[\"\\\\nrt0]"
            },
            {
              "name": "constant.other.placeholder.yaoxiang",
              "match": "\\$\\{[^}]*\\}"
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.hex.yaoxiang",
          "match": "\\b0[xX][0-9a-fA-F][0-9a-fA-F_]*\\b"
        },
        {
          "name": "constant.numeric.octal.yaoxiang",
          "match": "\\b0[oO][0-7][0-7_]*\\b"
        },
        {
          "name": "constant.numeric.binary.yaoxiang",
          "match": "\\b0[bB][01][01_]*\\b"
        },
        {
          "name": "constant.numeric.float.yaoxiang",
          "match": "\\b\\d[\\d_]*\\.\\d[\\d_]*([eE][+-]?\\d+)?\\b"
        },
        {
          "name": "constant.numeric.integer.yaoxiang",
          "match": "\\b\\d[\\d_]*\\b"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.boolean.yaoxiang",
          "match": "\\b(true|false)\\b"
        },
        {
          "name": "constant.language.void.yaoxiang",
          "match": "\\b(void)\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.flow.yaoxiang",
          "match": "\\b(if|elif|else|match|while|for|in|return|break|continue)\\b"
        },
        {
          "name": "keyword.declaration.yaoxiang",
          "match": "\\b(type|use|pub|const)\\b"
        },
        {
          "name": "keyword.other.yaoxiang",
          "match": "\\b(mut|ref|spawn|as|unsafe|static_assert)\\b"
        },
        {
          "name": "variable.language.self.yaoxiang",
          "match": "\\b(self)\\b"
        },
        {
          "name": "variable.language.wildcard.yaoxiang",
          "match": "\\b_\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "support.type.primitive.yaoxiang",
          "match": "\\b(Int|Int8|Int16|Int32|Int64|Float|Float32|Float64|Bool|Char|Str|Bytes|Void|Self)\\b"
        },
        {
          "name": "support.type.primitive.alias.yaoxiang",
          "match": "\\b(int|int8|int16|int32|int64|float|float32|float64|bool|char|str|string|bytes|i8|i16|i32|i64|u8|u16|u32|u64|f32|f64)\\b"
        },
        {
          "name": "support.class.yaoxiang",
          "match": "\\b(List|Dict|Set|String|Option|Result|Box|Arc|Rc|Weak|Array|Matrix|Nat|Tuple)\\b"
        },
        {
          "comment": "User-defined type names (PascalCase identifiers)",
          "name": "entity.name.type.yaoxiang",
          "match": "\\b[A-Z][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "function-definition": {
      "comment": "Function definition: name: (params) -> Type = ...",
      "patterns": [
        {
          "comment": "Function with type signature: name: (...) -> Type =",
          "match": "\\b([a-z_][a-zA-Z0-9_]*)\\s*(:)\\s*(?=\\(|\\[)",
          "captures": {
            "1": { "name": "entity.name.function.yaoxiang" },
            "2": { "name": "keyword.operator.type.annotation.yaoxiang" }
          }
        },
        {
          "comment": "Main and simple function: main = {",
          "match": "\\b(main)\\s*(=)\\s*(?=\\{)",
          "captures": {
            "1": { "name": "entity.name.function.yaoxiang" },
            "2": { "name": "keyword.operator.assignment.yaoxiang" }
          }
        }
      ]
    },
    "method-binding": {
      "comment": "Method binding: Type.method: ...",
      "match": "\\b([A-Z][a-zA-Z0-9_]*)\\s*(\\.)\\s*([a-z_][a-zA-Z0-9_]*)\\s*(:)",
      "captures": {
        "1": { "name": "entity.name.type.yaoxiang" },
        "2": { "name": "punctuation.accessor.yaoxiang" },
        "3": { "name": "entity.name.function.yaoxiang" },
        "4": { "name": "keyword.operator.type.annotation.yaoxiang" }
      }
    },
    "type-definition": {
      "comment": "Type definition: type Name = ...",
      "match": "\\b(type)\\s+([A-Z][a-zA-Z0-9_]*)",
      "captures": {
        "1": { "name": "keyword.declaration.type.yaoxiang" },
        "2": { "name": "entity.name.type.yaoxiang" }
      }
    },
    "use-statement": {
      "comment": "Use/import statement: use std.io",
      "match": "\\b(use)\\s+([a-zA-Z_][a-zA-Z0-9_.{}, ]*)",
      "captures": {
        "1": { "name": "keyword.control.import.yaoxiang" },
        "2": { "name": "entity.name.namespace.yaoxiang" }
      }
    },
    "function-call": {
      "comment": "Function/method calls: name(...)",
      "match": "\\b([a-z_][a-zA-Z0-9_]*)\\s*(?=\\()",
      "captures": {
        "1": { "name": "entity.name.function.call.yaoxiang" }
      }
    },
    "arrows": {
      "patterns": [
        {
          "name": "keyword.operator.arrow.return.yaoxiang",
          "match": "->"
        },
        {
          "name": "keyword.operator.arrow.lambda.yaoxiang",
          "match": "=>"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.range.yaoxiang",
          "match": "\\.\\.\\.|\\.\\."
        },
        {
          "name": "keyword.operator.path.yaoxiang",
          "match": "::"
        },
        {
          "name": "keyword.operator.comparison.yaoxiang",
          "match": "==|!=|<=|>=|<|>"
        },
        {
          "name": "keyword.operator.logical.yaoxiang",
          "match": "&&|\\|\\||!"
        },
        {
          "name": "keyword.operator.arithmetic.yaoxiang",
          "match": "[+\\-*/%]"
        },
        {
          "name": "keyword.operator.assignment.yaoxiang",
          "match": "="
        },
        {
          "name": "keyword.operator.try.yaoxiang",
          "match": "\\?"
        },
        {
          "name": "keyword.operator.pipe.yaoxiang",
          "match": "\\|"
        }
      ]
    },
    "punctuation": {
      "patterns": [
        {
          "name": "punctuation.bracket.round.yaoxiang",
          "match": "[()]"
        },
        {
          "name": "punctuation.bracket.square.yaoxiang",
          "match": "[\\[\\]]"
        },
        {
          "name": "punctuation.bracket.curly.yaoxiang",
          "match": "[{}]"
        },
        {
          "name": "punctuation.separator.comma.yaoxiang",
          "match": ","
        },
        {
          "name": "punctuation.separator.semicolon.yaoxiang",
          "match": ";"
        },
        {
          "name": "punctuation.separator.colon.yaoxiang",
          "match": ":"
        },
        {
          "name": "punctuation.accessor.dot.yaoxiang",
          "match": "\\."
        }
      ]
    }
  }
}
